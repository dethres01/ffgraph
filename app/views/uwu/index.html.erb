<!-- app/views/travel/index.html.erb -->
<div class="col-lg-12 mt-5">
  <% if flash[:alert] %>
    <div class="alert alert-warning"><%= flash[:alert] %></div>
  <% end %>
  <div class="mx-auto mt-5" style="width: 400px">
  
<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: uwu_search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :Log, 'Welcome to the UwU graph module '%>
            <%= text_field_tag :log, nil, placeholder: 'The numbers after report/', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>